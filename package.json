{
  "name": "@shd101wyy/crossnote",
  "version": "0.8.0",
  "description": "A powerful markdown tool",
  "keywords": [
    "markdown"
  ],
  "repository": "https://github.com/shd101wyy/crossnote",
  "license": "NCSA",
  "contributors": [
    "shd101wyy",
    "kachkaev",
    "gabyx"
  ],
  "main": "out/cjs/index.js",
  "module": "out/esm/index.js",
  "typings": "out/types/index.d.ts",
  "files": [
    "dependencies",
    "docs",
    "out",
    "styles"
  ],
  "scripts": {
    "build": "rm -rf ./out && yarn build:typings && yarn build:esbuild",
    "build:esbuild": "node build.js",
    "build:typings": "tsc --project . --declaration",
    "build:watch": "rm -rf ./out && concurrently \"tsc --project . --watch\" \"node build.js --watch\"",
    "check:all": "npm run check:prettier && npm run check:tsc && npm run check:tslint",
    "check:prettier": "prettier --check \"**/*.*\"",
    "check:tsc": "tsc --project . --noEmit",
    "check:tslint": "tslint --project .",
    "fix": "npm run fix:tslint && npm run fix:prettier",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "fix:tslint": "tslint --fix --project .",
    "prepare": "husky install && npm run build",
    "test": "jest --no-coverage",
    "test:coverage": "jest"
  },
  "lint-staged": {
    "**/*.*": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/katex": "^0.16.2",
    "@viz-js/viz": "^3.1.0",
    "async-mutex": "^0.4.0",
    "babyparse": "^0.4.6",
    "cheerio": "1.0.0-rc.3",
    "chrome-location": "^1.2.1",
    "crypto-es": "^2.0.4",
    "fs-extra": "^8.0.1",
    "imagemagick-cli": "^0.5.0",
    "less": "^3.9.0",
    "lodash": "^4.17.15",
    "markdown-it": "^13.0.1",
    "minisearch": "^6.1.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "object-hash": "^3.0.0",
    "pako": "^2.1.0",
    "puppeteer-core": "^21.1.0",
    "qiniu": "^7.2.2",
    "request": "^2.88.0",
    "slash": "^5.1.0",
    "temp": "^0.9.0",
    "twemoji": "^13.1.0",
    "uslug": "^1.0.4",
    "vega-loader": "^4.5.1",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.11",
    "@types/jest": "^27.0.2",
    "@types/jquery": "^3.3.29",
    "@types/markdown-it": "^13.0.0",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^12.0.10",
    "@types/pako": "^2.0.0",
    "@types/vfile": "^3.0.2",
    "@types/vscode": "1.70.0",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.2",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^10.3.0",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.2.5",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  }
}
