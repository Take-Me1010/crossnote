{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "incremental": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out/types/"
    // "declarationMap": true
    // "outFile": "./out/types/index.d.ts"
    //     "strict": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "out",
    "build.js",
    "copy-files.js",
    "compile-less.js"
  ]
}
