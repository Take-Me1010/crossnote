{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "incremental": true,
    "emitDeclarationOnly": true,
    "outDir": "./out",
    "outFile": "./out/types/index.d.ts"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
